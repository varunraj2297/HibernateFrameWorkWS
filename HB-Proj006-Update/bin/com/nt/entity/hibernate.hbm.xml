    <!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
  <hibernate-mapping>
  	<class name="com.nt.entity.ProductDetails" table="PRODUCTDETAILS">
  		
  		<id name="pid"  type="int" column="PID" length="5"/>
  		<property name="pname" type="string" column="PNAME" length="10"/>

  		<property name="quantity" type="float" column="QUANTITY" scale="10" precision ="3"/>

  		<property name="price" type="float" column="PRICE" scale="10" precision ="3"/>

  		<property name="isExpired" type="boolean" column="ISEXPIRED"/>
  		
  	</class>
  </hibernate-mapping>