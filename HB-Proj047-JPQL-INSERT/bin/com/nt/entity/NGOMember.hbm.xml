<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
    <hibernate-mapping>
    	
    	<class name="com.nt.entity.NGOMember" table="NGOMember">
    		<!-- Singular id -->
    		<id name="ngoid" column="NGOID" type="int" length="10"/>   
    		<property name="ngoname" column="NGONAME" type="string" length="10"/>
    		<property name="salary" column="SAL"  type="float" scale="7" precision="2"/>  		
    		<property name="desg" column="JOB" type="string" length="10"/>
    	</class>
    	
    	
    </hibernate-mapping>