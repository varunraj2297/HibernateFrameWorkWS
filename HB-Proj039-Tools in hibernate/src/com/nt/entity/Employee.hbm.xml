<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  <hibernate-mapping>
     <class name="com.nt.entity.Employee"  table="EMPLOYEE_INFO">
        <!-- Singular ID field cfg -->
        <id name="eno"  column="EID" type="int" length="10">
           <generator class="increment"/>
        </id>
        <!-- other properties cfg -->
        <property name="ename"  column="ENAME" type="string" length="15"/>
        <property name="desg"  column="DESG" type="string" length="15"/>
        <property name="salary" column="SALARY"  type="float" length="10"  precision="2" scale="8"/>
        <property name="age1" column="age1" type="int" length="3"/>
     </class>
  </hibernate-mapping>        